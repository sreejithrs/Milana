<section style="padding-top: 4rem;">
  <div class="row">
    <div class="col-md-12 text-center">
      <p class="admin-logo">MANAGE PRODUCTS</p>
    </div>
  </div>
  <div class="d-flex justify-content-center" style="padding-top: 40px;">
    <table class="table align-middle table-responsive-md card-product col-lg-6 col-md-8 col-sm-10 col-10" id="ProductList">
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Title</th>
          <th scope="col">Price</th>
          <th scope="col">Category</th>
          <th scope="col">Colours</th>
          <th scope="col">Image</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <td>{{this.Name}}</td>
          <td>{{this.Title}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Category}}</td>


          <td>
            {{#each this.Colour}}
            {{this.[]}},
            {{/each}}
          </td>

          
          <td><img style="width: 70px;height: 70px;" src="/product-images/{{this.Imageid.[0]}}"></td>
          <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">Edit</a>
          </td>
          <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger"
              onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

