<section style="padding-top: 4rem;">
  <div class="row">
    <div class="col-md-12 text-center">
      <p class="admin-logo">MANAGE CATEGORY</p>
    </div>
  </div>
  <div class="d-flex justify-content-center" style="padding-top: 40px;">
    <table class="table align-middle table-responsive-md card-product" id="ProductList" style="width:900px ;">
      <thead>
        <tr>
          <th scope="col">Category Name</th>
          <th scope="col">Subcategory</th>
          <th scope="col">Image</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each cat}}
        <tr>
          <td>{{this.Category}}</td>
          <td>{{this.SubCategory}}</td>
          
          <td><img style="width: 70px;height: 70px;" src="/category-images/{{this._id}}.jpg"></td>
          <td><a href="/admin/edit-category?id={{this._id}}" class="btn btn-warning">Edit</a></td>
          <td><a href="/admin/delete-category/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Category}} ?')">Delete</a></td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>
