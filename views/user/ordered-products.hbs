<div class="container">
    <div class="mt-4">
        <a href="/my-orders"><button type="button" class="btn btn-warning">Back</button></a>
    </div>
    <div class="mt-4" style="background-color: rgb(240, 240, 240);">
        <div class="col-md-4">
            <b style="font-size: large;font-family: Arial, Helvetica, sans-serif;">Delivery Address</b><br>
            <div class="mt-4">
            <span style="font-weight: 700;">{{products.[0].address.firstname}}&nbsp;{{products.[0].address.lastname}}</span>


            <div>
                <span>{{products.[0].address.address1}}</span>
                <span>{{products.[0].address.address2}}</span>
                <span>{{products.[0].address.city}},</span>
                <span>{{products.[0].address.state}},&nbsp;{{products.[0].address.pin}}</span>
                <p><span style="font-weight: 700;">Phone Number:</span> {{products.[0].address.phone}}</p>
                
            </div>
            </div>
        </div>
    </div>

    <div class="d-flex pt-3" style="background-color: #111111; color: #ffffff;height: 55px;margin-top: 30px;">
        <div class="col-md-3">Image</div>
        <div class="col-md-3">Product Name</div>
        <div class="col-md-2">Quantity</div>
        <div class="col-md-2">Price</div>
         <div class="col-md-2">Expected Delivery</div>
    </div>
    {{#each products}}
    <div class="mt-4">
        <div class="row" style="background-color: rgb(240, 240, 240);">
        <div class="col-md-3">
            <img src="/product-images/{{this.product.Imageid.[0]}}" style="height: 120px;width: 100px;">
        </div>
        <div class="col-md-3">
            <p>{{this.product.Name}}</p>
            <p>{{this.product.Title}}</p>
        </div>
        <div class="col-md-2">{{this.quantity}}</div>
        <div class="col-md-2">{{this.product.Price}}</div>
         <div class="col-md-2">{{this.deliveryDate}}</div>
         </div>
       
    </div>
    {{/each}}
</div>